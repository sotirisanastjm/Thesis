{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C#: NexusChat",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/NexusChat/bin/Debug/net8.0/NexusChat.dll",
        "args": [],
        "cwd": "${workspaceFolder}/NexusChat",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/NexusChat/Views"
        }
      }
    ]
  }
  